<div class="row">
  <% @flats.each do |flat| %>
    <div class="card" style="width: 20rem;">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1631679706909-1844bbd07221?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8bGl2aW5nJTIwcm9vbSUyMGRlY29yfGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= link_to flat.name, flat_path(flat) %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Address:</strong> <%= flat.address %></li>
        <li class="list-group-item"><strong>Price:</strong> $<%= flat.price_per_night %></li>
        <li class="list-group-item"><strong>Guests:</strong> <%= flat.number_of_guests %></li>
      </ul>
      <div class="card-body">
        <%= link_to raw("<i class='fa-solid fa-pencil'></i> Edit"), edit_flat_path(flat), class: 'px-3' %>
        <%= link_to raw("<i class='fa-solid fa-trash-can'></i> Delete"), flat_path(flat),
              data: {
                turbo_method: :delete,
                turbo_confirm: 'Are you sure?'
              } %>
      </div>
  </div>
  <% end %>
</div>
